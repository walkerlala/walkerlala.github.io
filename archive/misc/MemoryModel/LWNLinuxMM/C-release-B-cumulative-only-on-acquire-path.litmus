C C-release-B-cumulative-only-on-acquire-path.litmus

{
}

P0(int *x, int *y)
{
	WRITE_ONCE(*x, 1);
	smp_store_release(y, 1);
}

P1(int *y, int *z)
{
	r1 = READ_ONCE(*y);
	WRITE_ONCE(*z, r1);
}

P2(int *x, int *z)
{
	r2 = READ_ONCE(*z);
	smp_rmb();
	r3 = READ_ONCE(*x);
}

P3(int *y)
{
	r4 = smp_load_acquire(y);
}

exists (1:r1=1 /\ 2:r2=1 /\ 2:r3=0 /\ 3:r4=1)
